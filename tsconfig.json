{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "outDir": "build",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "moduleResolution": "node"
    },
    "compileOnSave": true,
    "exclude": ["node_modules"],
    "include": ["src"]
  }